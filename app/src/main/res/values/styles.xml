<resources>
    <!-- Base application theme. -->
    <style name="AppDefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_out</item>
    </style>
    <style name="AppDefaultTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppDefaultTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="ToolBarApparence" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/short_margin</item>
    </style>
    <style name="AppDefaultTheme.NoActionBar" parent="AppDefaultTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppImageTheme" parent="AppDefaultTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppImageViewerTheme" parent="AppImageTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="TextAppearance" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.FullScreen" parent="AppDefaultTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
